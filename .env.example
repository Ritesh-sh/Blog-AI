# Blog Generator - Environment Variables
# Copy this file to .env and fill in your values

# =============================================================================
# Gemini (Google AI) Configuration
# =============================================================================
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-3-flash-preview

# =============================================================================
# Application Settings
# =============================================================================
APP_ENV=development                    # "development" or "production"
LOG_LEVEL=INFO                         # DEBUG, INFO, WARNING, ERROR
LOG_FILE=                              # Optional: /var/log/ai_blog/app.log (for production)

# =============================================================================
# MongoDB Atlas Configuration
# =============================================================================
# Get your connection string from: https://cloud.mongodb.com
# Format: mongodb+srv://<username>:<password>@cluster0.xxxxx.mongodb.net
MONGODB_URI=mongodb+srv://user:password@cluster0.xxxxx.mongodb.net
MONGODB_DB=blog_generator

# =============================================================================
# JWT / Authentication
# =============================================================================
# IMPORTANT: Generate a secure random key for production!
# You can use: python -c "import secrets; print(secrets.token_hex(32))"
JWT_SECRET_KEY=change-this-in-production-use-secrets-manager
JWT_ALGORITHM=HS256
JWT_EXPIRY_MINUTES=60

# =============================================================================
# Unsplash API (for blog images)
# =============================================================================
# Get your key at: https://unsplash.com/developers
UNSPLASH_ACCESS_KEY=your_unsplash_access_key_here

# =============================================================================
# Security / CORS
# =============================================================================
CORS_ALLOWED_ORIGINS=http://localhost:7860,http://localhost:3000,http://localhost:8000
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# =============================================================================
# Optional: Error Tracking (Sentry)
# =============================================================================
SENTRY_DSN=

# =============================================================================
# Frontend Settings (for React app)
# =============================================================================
VITE_API_BASE_URL=http://localhost:8000
VITE_APP_ENV=development
PORT=3000
